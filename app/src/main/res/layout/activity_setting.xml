<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.omar.carrentaljo.SettingActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="505dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="21pt"
            android:layout_marginTop="1pt">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20pt"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5pt"
                    android:drawableLeft="@drawable/ic_user"
                    android:drawablePadding="5pt"
                    android:drawableTint="@color/colorPrimary"
                    android:fontFamily="casual"
                    android:gravity="left|center"
                    android:hint="User Name"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="18sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="21pt"
            android:layout_marginTop="1pt">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5pt"
                    android:drawableLeft="@drawable/ic_call"
                    android:drawablePadding="5pt"
                    android:drawableTint="@color/colorPrimary"
                    android:fontFamily="casual"
                    android:gravity="left|center"
                    android:hint="Phone number"
                    android:textColorHint="@color/colorPrimary" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="21pt"
            android:layout_marginTop="1pt">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5pt"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawablePadding="5pt"
                    android:drawableTint="@color/colorPrimary"
                    android:fontFamily="casual"
                    android:gravity="left|center"
                    android:hint="email"
                    android:textColorHint="@color/colorPrimary" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="21pt"
            android:layout_marginTop="1pt">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20pt"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5pt"
                    android:drawableLeft="@drawable/ic_vpn"
                    android:drawablePadding="5pt"
                    android:drawableTint="@color/colorPrimary"
                    android:fontFamily="casual"
                    android:gravity="left|center"
                    android:hint="Change password"
                    android:textColorHint="@color/colorPrimary" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="21pt"
            android:layout_marginTop="1pt">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20pt"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5pt"
                    android:drawableLeft="@drawable/ic_feedback"
                    android:drawablePadding="5pt"
                    android:drawableTint="@color/colorPrimary"
                    android:fontFamily="casual"
                    android:gravity="left|center"
                    android:text="Feedback"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_margin="1pt"
            android:background="@color/colorPrimary"
            android:fontFamily="casual"
            android:text="sign out"
            android:textColor="#fff"
            android:textSize="24sp" />
    </android.support.v7.widget.CardView>


</LinearLayout>

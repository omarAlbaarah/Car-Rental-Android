<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.omar.carrentaljo.AdminActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/tableLayout_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:tabBackground="@color/colorAccent"
        app:tabGravity="fill"
        app:tabTextColor="#FFF"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabMode="fixed"></android.support.design.widget.TabLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_admin"
        android:layout_width="match_parent"
        android:layout_height="472dp"
        android:layout_marginTop="5dp">


    </android.support.v4.view.ViewPager>

    <Button
        android:id="@+id/admin_SignOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borderr"
        android:text="Sign out"
        android:textColor="#FFF" />

</LinearLayout>

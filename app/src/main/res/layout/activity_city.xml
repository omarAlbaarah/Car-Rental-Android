<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/anim11"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colornew"
    tools:context="com.omar.carrentaljo.CityActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="503dp"
            android:orientation="vertical">

            <AutoCompleteTextView
                android:id="@+id/search1"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#fff"
                android:drawableRight="@drawable/ic_search"
                android:drawableTint="#3399FF"
                android:hint="Search here .."
                android:text=""
                android:textSize="14sp" />


            <ListView
                android:id="@+id/city_list"
                android:layout_width="match_parent"
                android:layout_height="469dp" />


        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/filter_city1"
                    android:layout_width="207dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/colorAccent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Sort by low price"
                        android:textColor="#FFF"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="20dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="3pt"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/down" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sort_city1"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/colorAccent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"

                        android:text="Sort by high price"
                        android:textColor="#FFF"
                        android:textSize="20sp" />


                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="6dp"
                        android:layout_height="59dp"
                        android:layout_marginTop="3pt"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/up" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    tools:context="com.omar.carrentaljo.Admin_confirmReservaionActivity">

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/ad_carName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CarName"
        android:textColorHint="#FFF"
        android:textColor="#FFF"
        android:textSize="25sp" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/ad_Location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:hint="Location"
        android:textColorHint="#FFF"
        android:textColor="#FFF"
        android:text="" />

    <TextView
        android:id="@+id/ad_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#fff"
        android:hint="Customer Name"
        android:textColorHint="#FFF"
        android:text=""
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/ad_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#fff"
        android:textColorHint="#FFF"
        android:hint="Customer Phone#"
        android:text=""
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/ad_TotalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:hint="Price"
        android:textColorHint="#FFF"
        android:textColor="#fff"
        android:text=""
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:textColor="#fff"
            android:text="PickUp Date :" />

        <TextView
            android:id="@+id/ad_pickdate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:textSize="25sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:textColor="#fff"
            android:text="Drop off Date :" />

        <TextView
            android:id="@+id/ad_dropdate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:textSize="25sp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/ad_confirm"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="@drawable/borderr"
            android:text="Confirm" />

        <Button
            android:id="@+id/ad_cancel"
            android:layout_width="180dp"
            android:textColor="#fff"
            android:background="@drawable/borderr"
            android:layout_height="wrap_content"
            android:text="Cancel" />
    </LinearLayout>


</LinearLayout>

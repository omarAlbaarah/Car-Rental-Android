<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/carb1_2"
    tools:context="com.omar.carrentaljo.ConfirmActivity">

    <TextView
        android:id="@+id/confirm_location"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="PickUp Date"
        android:textStyle="bold"
        android:textColor="#fff"
        android:paddingTop="15dp"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/layout1"
        android:orientation="vertical"
        android:paddingTop="10dp">


        <EditText
            android:id="@+id/Confirm_date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_txt"
            android:ems="10"
            android:drawableLeft="@drawable/calender1"
            android:drawablePadding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="dd/mm/yy"
            android:inputType="date"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/Confirm_time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_txt"
            android:drawableLeft="@drawable/time"
            android:drawablePadding="10dp"
            android:ems="10"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="10:00AM"
            android:inputType="time"
            android:textSize="20dp" />


    </LinearLayout>
    <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:paddingTop="15dp"
        android:textColor="#fff"
        android:text="Drop-Off Date"
        android:textStyle="bold"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/layout1"
        android:orientation="vertical"
        android:paddingTop="20dp">


        <EditText
            android:id="@+id/drop_date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_txt"
            android:ems="10"
            android:drawableLeft="@drawable/calender1"
            android:drawablePadding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="dd/mm/yy"
            android:inputType="date"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/drop_time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_txt"
            android:drawableLeft="@drawable/time"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="10:00AM"
            android:inputType="time"
            android:textSize="20dp" />


    </LinearLayout>

    <Button
        android:id="@+id/Confirm_confirmButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn"
        android:layout_marginTop="75dp"
        android:text="Confirm" />

</LinearLayout>
